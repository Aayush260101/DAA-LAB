#include<stdio.h>
#include<stdlib.h>
#define max 100
int B_Sort(int ar[],int N)
{
    int i,j,t,c=0;
    for(i=0;i<N-1;i++)
    {
        for(j=0;j<N-1-i;j++)
        {
            if(ar[j]>ar[j+1])
            {
                c++;
                t=ar[j];
                ar[j]=ar[j+1];
                ar[j+1]=t;
            }
        }
    }
    return c;
}
void Display(int ar[],int N)
{
    int i;
    for(i=0;i<N;i++)
    {
        printf("%d ",ar[i]);
    }
}
int main()
{
    int ar[max];
    int N,i,j,x;
    printf("Enter the number of elements\n");
    scanf("%d",&N);
    printf("Enter the Elements\n");
    for(i=0;i<N;i++)
        scanf("%d",&ar[i]);
    x=B_Sort(ar,N);
    Display(ar,N);
    printf("\nTotal No. of Comparisons : %d",x);
}











#include<stdio.h>
#include<stdlib.h>
#define max 100
int Sel_Sort(int ar[],int N)
{
    int i,j,pos=0,min=0,c,c1=0,c2=0;
    for(i=0;i<N-1;i++)
    {
        min=ar[i];
        pos=i;
        for(j=i+1;j<N;j++)
        {
            if(min>ar[j])
            {
                c1++;
                min=ar[j];
                pos=j;
            }
        }
        if(pos!=i)
        {
            ar[pos]=ar[i];
            ar[i]=min;
            c2++;
        }
    }
    c=c1+c2;
    return c;
}
void Display(int ar[],int N)
{
    int i;
    for(i=0;i<N;i++)
    {
        printf("%d ",ar[i]);
    }
}
int main()
{
    int ar[max];
    int N,i,x;
    printf("Enter the number of elements\n");
    scanf("%d",&N);
    printf("Enter the Elements\n");
    for(i=0;i<N;i++)
        scanf("%d",&ar[i]);
    x=Sel_Sort(ar,N);
    Display(ar,N);
    printf("\nTotal No. of Comparisons : %d",x);
}












#include<stdio.h>
#include<stdlib.h>
#define max 100
int Ins_Sort(int ar[],int N)
{
    int i,j,t=0,c=0;
    for(i=0;i<N;i++)
    {
        t=ar[i];
        j=i-1;
        while(j>=0 && t<ar[j])
        {
            ar[j+1]=ar[j];
            j--;
            c++;
        }
        ar[j+1]=t;
    }
    return c;
}
void Display(int ar[],int N)
{
    int i;
    for(i=0;i<N;i++)
    {
        printf("%d ",ar[i]);
    }
}
int main()
{
    int ar[max];
    int N,i,x;
    printf("Enter the number of elements\n");
    scanf("%d",&N);
    printf("Enter the Elements\n");
    for(i=0;i<N;i++)
        scanf("%d",&ar[i]);
    x=Ins_Sort(ar,N);
    Display(ar,N);
    printf("\nTotal No. of Comparisons : %d",x);
}
